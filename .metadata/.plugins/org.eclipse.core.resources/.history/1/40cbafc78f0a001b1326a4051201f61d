package elevadores;

import java.util.Scanner;

public class Elevadores {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);

		int preferenciaA = 0;
		int preferenciaB = 0;
		int preferenciaC = 0;

		int Amanha = 0;
		int Bmanha = 0;
		int Cmanha = 0;

		int AVespertino = 0;
		int BVespertino = 0;
		int CVespertino = 0;

		int ANoturno = 0;
		int BNoturno = 0;
		int CNoturno = 0;
			
		int maiorPeriodoNoturno = 0;
		int maiorPeriodoVespertino = 0;
		int maiorPeriodoManha = 0;

		
		int elevadorMaisUtilizado = 0;
		
		
		int manha = 0;
		int vespertino = 0;
		int noite = 0;


		for (int i = 0; i <= 49; i++) {

			System.out.println("Escolha  o elevador que você mais utiliza ?(A, B, C)");
			char escolha = scan.next().charAt(0);
			if (escolha == 'A') {
				preferenciaA++;
			} else if (escolha == 'B') {
				preferenciaB++;
			} else if (escolha == 'C') {
				preferenciaC++;
			}

			System.out.println("Em que periodo vc mais utiliza O elevador  ?(M, N, V)");
			char periodo = scan.next().charAt(0);
			if (escolha == 'A' && periodo =='M') {
				Amanha++;
			} else if (escolha == 'B' && periodo =='M') {
				Bmanha++;
			} else if (escolha == 'C' && periodo =='M') {
				Cmanha++;
			}
			
			if (escolha == 'A' && periodo =='N') {
				ANoturno++;
			} else if (escolha == 'B' && periodo =='N') {
				BNoturno++;
			} else if (escolha == 'C' && periodo =='N') {
				CNoturno++;
			}
			
			if (escolha == 'A' && periodo =='V') {
				AVespertino++;
			} else if (escolha == 'B' && periodo =='V') {
				BVespertino++;
			} else if (escolha == 'C' && periodo =='V') {
				CVespertino++;
			}
		
		}
		
		if(preferenciaA > preferenciaB) {                           
			elevadorMaisUtilizado = preferenciaA;
			System.out.println("Elevador mais utilizado é o A: "+preferenciaA);

		}
		else  {
			elevadorMaisUtilizado = preferenciaB;
			System.out.println("Elevador mais utilizado é o B: "+preferenciaB);

		}
		
		if(elevadorMaisUtilizado<preferenciaC) {
			elevadorMaisUtilizado = preferenciaC;
			System.out.println("Elevador mais utilizado é o C: "+preferenciaC);

		}
		
		
		
		
		
		
		
		
		
		
		

	}

}
